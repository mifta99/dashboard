<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/crd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="@dimen/margin_standart"
        app:cardCornerRadius="@dimen/margin_medium"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardBackgroundColor="#F4F4F4"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TableRow>

                <ImageView
                    android:id="@+id/imx_icpict"
                    android:layout_width="50dp"
                    android:layout_height="86dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_pindah" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tvx_kec"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/nexabold"
                        android:textColor="@color/black"
                        android:text="KECAMATAN SITUBONDO"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:text="Jumlah Permohonan"
                        android:fontFamily="@font/nexalight"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/tvx_jenis"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Surat Pindah"
                        android:fontFamily="@font/nexalight"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <Button
                    android:id="@+id/tvx_totalKec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F55858"
                    android:text="50"
                    android:padding="@dimen/margin_standart"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="40sp"
                    android:fontFamily="@font/nexabold"
                    app:srcCompat="@drawable/ic_ktp"/>
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>