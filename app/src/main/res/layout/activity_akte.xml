<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".activity.KkActivity">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_field"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative"
            android:layout_marginTop="110dp"
            android:gravity="center"
            tools:ignore="NotSibling">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">

                <TableRow>

                    <Button
                        android:id="@+id/bt_kelahiran"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="#F55858"
                        android:fontFamily="@font/nexabold"
                        android:gravity="center"
                        android:padding="@dimen/margin_standart"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        app:srcCompat="@drawable/ic_ktp" />

                    <Button
                        android:id="@+id/bt_kematian"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="#F55858"
                        android:fontFamily="@font/nexabold"
                        android:gravity="center"
                        android:padding="@dimen/margin_standart"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        app:srcCompat="@drawable/ic_ktp" />
                </TableRow>

                <TableRow android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:clickable="true"
                        android:fontFamily="@font/nexabold"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:text="Akta Kelahiran" />

                    <TextView
                        android:layout_weight="1"
                        android:clickable="true"
                        android:fontFamily="@font/nexabold"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:text="Akta Kematian" />

                </TableRow>

                <TableRow android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/bt_perkawinan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="#F55858"
                        android:fontFamily="@font/nexabold"
                        android:gravity="center"
                        android:padding="@dimen/margin_standart"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        app:srcCompat="@drawable/ic_ktp" />

                    <Button
                        android:id="@+id/bt_perceraian"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:background="#F55858"
                        android:fontFamily="@font/nexabold"
                        android:gravity="center"
                        android:padding="@dimen/margin_standart"
                        android:text="-"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        app:srcCompat="@drawable/ic_ktp" />
                </TableRow>

                <TableRow android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:fontFamily="@font/nexabold"
                        android:gravity="center_horizontal"
                        android:text="Akta Perkawinan" />

                    <TextView
                        android:layout_weight="1"
                        android:fontFamily="@font/nexabold"
                        android:gravity="center_horizontal"
                        android:text="Akta Perceraian" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>