<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/crd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standart"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="20dp"
        app:cardBackgroundColor="#F4F4F4"
        app:cardCornerRadius="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        card_view:cardCornerRadius="30dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/imx_icpict"
                    android:layout_width="60dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/ic_kk" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvx_kec"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/nexabold"
                        android:text="KECAMATAN SITUBONDO"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/nexalight"
                        android:text="Jumlah Permohonan"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvx_jenis"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/nexalight"
                        android:text="Kartu Keluarga"
                        android:textColor="@color/black" />
                </LinearLayout>

                <Button
                    android:id="@+id/tvx_totalKec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F55858"
                    android:fontFamily="@font/nexabold"
                    android:gravity="center"
                    android:padding="@dimen/margin_standart"
                    android:text="50"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    app:srcCompat="@drawable/ic_ktp" />
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>